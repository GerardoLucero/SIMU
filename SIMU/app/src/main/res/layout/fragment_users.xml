    android:background="@color/colorBackgroud"
    tools:context="com.example.topitzin.simu.NanoStationFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_undeline"
            android:textSize="0sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/colorAppName"
            android:id="@+id/editText2"
            android:layout_gravity="center"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombre"
            android:padding="10dp"
            android:text="@string/usuarios"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/white_border_top"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerU"
                    android:layout_margin="10dp">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </RelativeLayout>

